<header>
  <div class="constrained">
    <h1 class="title header-section"><%= link_to 'MINILOGUEpatches', root_path %></h1>

    <div class="actions header-section">
      <%= link_to new_patch_path do %>
        <%= icon 'plus', 'New Patch' %>
      <% end %>

